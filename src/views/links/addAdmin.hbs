<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form id="form-user" action="/usuarios/add" method="POST">
                        <div class="form-group">
                            <input id="username" type="text" class="form-control" name="username" placeholder="Username"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input id="password" type="password" name="password" class="form-control"
                                placeholder="ContraseÃ±a">
                        </div>
                        <div class="form-group">
                            <input id="fullname" type="text" name="fullname" class="form-control"
                                placeholder="Nombre Completo">
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-6 text-end">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="rol" value="regular">
                                        <label class="form-check-label ms-1" for="regularCheckbox">Regular</label>
                                    </div>
                                </div>
                                <div class="col-6 text-start">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="rol" value="admin">
                                        <label class="form-check-label ms-1" for="adminCheckbox">Admin</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>