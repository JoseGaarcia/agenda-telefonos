<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form id="form" action="/telefonos/add" method="POST">
                        <div class="form-group">
                            <input id="name" type="text" class="form-control" name="name" placeholder="nombre" autofocus>
                        </div> 
                        <div class="form-group">
                            <input id="tlf" type="text" name="tlf" class="form-control" placeholder="TLF">
                        </div> 
                        <div class="form-group"> 
                            <input id="email" type="text" name="email" class="form-control" placeholder="email">
                        </div> 
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>